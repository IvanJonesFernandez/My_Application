<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create an RGB Color"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add two hexadecimal characters between 0-9, A-F or a-f without the '#' for each channel"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Red Channel Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/redInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Red Channel"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/redChannelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Green Channel Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/greenInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Green Channel"
        app:layout_constraintTop_toBottomOf="@id/redInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/greenChannelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Blue Channel Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/blueInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Blue Channel"
        app:layout_constraintTop_toBottomOf="@id/greenInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/blueChannelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Create Button -->
    <Button
        android:id="@+id/createColorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CREATE RGB COLOR"
        app:layout_constraintTop_toBottomOf="@id/blueInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Color Display Panel -->
    <TextView
        android:id="@+id/colorPanel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Created color display panel"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/createColorButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
